<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
            <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    
    <div class="span8">
      <h3>Posts</h3>
      <%= render 'shared/feed' %>
    </div>

  </div>
<% else %>

<div class="center hero-unit">
  <h1>Five Minute Friend</h1>

  <h2>
    For People You Meet on the Go!
  </h2>

        <%= link_to signup_path, class: "btn btn-large btn-primary" do %>
          <span class="fa fa-user"> Sign up now!</span>
        <% end %>
 
        <%= link_to signup_path, class: "btn btn-large btn-primary"  do %>
          <span class="fa fa-facebook"> Sign in with Facebook</span>
        <% end %>   
       
        <%= link_to signup_path, class: "btn btn-large btn-primary" do %>
          <span class="fa fa-linkedin"> Sign in with Linkedin</span>
        <% end %>
 
  
 </div>

<%= link_to image_tag("qr_code.png", alt: "Rails"), 'http://rubyonrails.org/' %>

<% end %>